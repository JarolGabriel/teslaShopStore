---
import '@/assets/styles/global.css'

interface Props {
    totalPages: number
}

const {totalPages} = Astro.props

const url = Astro.url;
const pageParam = Number(url.searchParams.get("page") ?? 1)

const currentPage= Math.max((pageParam > totalPages) ? totalPages : pageParam, 1);

const path = url.pathname

---



<div class=" flex justify-between my-32">

<a class="button" href={`${path}?page=${Math.max(currentPage -1, 1)}`}>Anterior</a>

<span>Pagina {currentPage} de {totalPages}</span>


<a class="button" href={`${path}?page=${Math.min(currentPage +1, totalPages)}`}>Siguiente</a>
</div>



